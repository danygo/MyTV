<resources>

    <style name="Theme.MyTV" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewStyle</item>
    </style>

    <style name="PrimaryTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialCardViewStyle">
        <item name="cardCornerRadius">@dimen/cornerRadius</item>
        <item name="cardElevation">8dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAnimationStyle">@style/OpenFromBottomAnimation</item>
    </style>

    <style name="OpenFromBottomAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_exit_to_bottom</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.PrimaryOutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TransparentGreyBackgroundText">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_rounded_background</item>
        <item name="backgroundTint">@color/transparentGrey</item>
    </style>
</resources>